<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Commits Report 2025</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-8">
    <div class="container mx-auto px-4" style="max-width: 95vw;">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Commits Report (2025)</h1>
        
        <div class="bg-white shadow-xl rounded-lg overflow-hidden mb-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Repository Summary</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repository</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commits</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Files Changed</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="repoSummary">
                            <!-- Will be populated by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Detailed Commits</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repository</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hash</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" style="min-width: 400px;">Files</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="commitDetails">
                            <!-- Will be populated by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-xl rounded-lg overflow-hidden mt-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Commit Timeline</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repository</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Files</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Impact</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="commitTimeline">
                            <!-- Will be populated by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-xl rounded-lg overflow-hidden mt-8">
            <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">File Timeline (Legacy View)</h2>
                <div class="overflow-x-auto">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">File Timeline</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Repository</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File Path</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timeline</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="fileTimeline">
                            <!-- Will be populated by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="commitModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-4/5 shadow-lg rounded-md bg-white">
            <div class="flex flex-col space-y-4">
                <div class="flex justify-between items-center">
                    <h3 class="text-2xl font-bold text-gray-900" id="modalTitle"></h3>
                    <button onclick="closeModal()" class="text-gray-400 hover:text-gray-500">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="mt-2">
                    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
                        <span id="modalDate"></span>
                        <span>•</span>
                        <span id="modalAuthor"></span>
                        <span>•</span>
                        <a id="modalCommitLink" href="#" target="_blank" class="text-blue-600 hover:text-blue-800 hover:underline"></a>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-4 mb-4">
                        <h4 class="font-semibold text-gray-900 mb-2">Description</h4>
                        <p id="modalDescription" class="text-gray-700"></p>
                    </div>
                    <div class="space-y-4">
                        <h4 class="font-semibold text-gray-900">Files Changed</h4>
                        <ul id="modalFiles" class="space-y-2"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentModalCommit = null;

        function showModal(fileData) {
            const latestCommit = fileData.commits[0];
            currentModalCommit = latestCommit;
            
            document.getElementById('modalTitle').textContent = latestCommit.title || latestCommit.message;
            document.getElementById('modalDate').textContent = new Date(latestCommit.date).toLocaleDateString();
            document.getElementById('modalAuthor').textContent = latestCommit.author;
            document.getElementById('modalCommitLink').textContent = latestCommit.hash;
            document.getElementById('modalCommitLink').href = `${REPO_GITHUB_URLS[fileData.repository]}${latestCommit.hash}`;
            
            // Show description with proper formatting
            const description = document.getElementById('modalDescription');
            if (latestCommit.description) {
                description.innerHTML = `
                    <div class="space-y-4">
                        <p class="text-gray-700">${latestCommit.description}</p>
                        ${latestCommit.impact ? `
                            <div class="flex items-center mt-4">
                                <span class="text-sm font-medium mr-2">Impact:</span>
                                <span class="px-2 py-1 text-xs font-medium rounded-full 
                                    ${latestCommit.impact === 'MAJOR' ? 'bg-red-100 text-red-800' : 
                                      latestCommit.impact === 'MODERATE' ? 'bg-yellow-100 text-yellow-800' : 
                                      'bg-green-100 text-green-800'}">
                                    ${latestCommit.impact.toLowerCase()}
                                </span>
                            </div>
                        ` : ''}
                    </div>
                `;
            } else {
                description.textContent = 'No detailed description available.';
            }
            
            // Show file history
            const filesList = document.getElementById('modalFiles');
            filesList.innerHTML = `
                <li class="py-2 px-3 bg-white rounded-lg shadow-sm">
                    <div class="text-sm text-gray-900 font-medium mb-2">File Path:</div>
                    <div class="text-sm text-gray-700" style="word-break: break-all;">${fileData.path}</div>
                </li>
                ${fileData.commits.length > 1 ? `
                    <li class="py-2 px-3 bg-white rounded-lg shadow-sm mt-4">
                        <div class="text-sm text-gray-900 font-medium mb-2">Previous Changes:</div>
                        <div class="space-y-2">
                            ${fileData.commits.slice(1).map(commit => `
                                <div class="text-sm">
                                    <a href="${REPO_GITHUB_URLS[fileData.repository]}${commit.hash}" 
                                       target="_blank"
                                       class="text-blue-600 hover:text-blue-800 hover:underline">
                                        ${new Date(commit.date).toLocaleDateString()}
                                    </a>
                                    - ${commit.message}
                                </div>
                            `).join('')}
                        </div>
                    </li>
                ` : ''}
            `;
            
            document.getElementById('commitModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('commitModal').classList.add('hidden');
            currentModalCommit = null;
        }

        // Close modal when clicking outside
        document.getElementById('commitModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        const REPO_GITHUB_URLS = {
            'ChangeCommerce.Products.API': 'https://github.com/NicheInteractiveMedia/ChangeCommerce.Products.API/',
            'ChangeCommerce.ShopifyAppExt': 'https://github.com/NicheInteractiveMedia/ChangeCommerce.ShopifyAppExt/',
            'ChangeCommerce.Stores.API': 'https://github.com/NicheInteractiveMedia/ChangeCommerce.Stores.API/',
            'ChangeCommerce.Utilities.JS': 'https://github.com/NicheInteractiveMedia/ChangeCommerce.Utilities.JS/',
            'shoppinggives.widget-sdk': 'https://github.com/NicheInteractiveMedia/shoppinggives.widget-sdk/'
        };

        const getCommitUrl = (repo, hash) => `${REPO_GITHUB_URLS[repo]}commit/${hash}`;
        const getFileUrl = (repo, hash, file) => `${REPO_GITHUB_URLS[repo]}blob/${hash}/${file}`;
        const getFileDiffUrl = (repo, hash, file) => `${REPO_GITHUB_URLS[repo]}commit/${hash}#diff-${btoa(file).replace(/\+/g, '-').replace(/\//g, '_')}`;


        async function fetchData() {
            const response = await fetch('commits_data.json');
            const data = await response.json();
            
            // Populate repository summary
            const repoSummaryHtml = data.repoSummary.map(repo => `
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${repo.name}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${repo.commits}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${repo.files}</td>
                </tr>
            `).join('');
            document.getElementById('repoSummary').innerHTML = repoSummaryHtml;

            // Populate commit details
            const commitDetailsHtml = data.commits.map(commit => {
                const fileChangesHtml = commit.file_changes?.map(change => {
                    const tags = JSON.parse(change.tags || '[]');
                    const impactAreas = JSON.parse(change.impact_areas || '[]');
                    
                    return `
                        <div class="mb-4 p-4 bg-gray-50 rounded-lg">
                            <div class="font-medium text-gray-700 mb-2">${change.file_path}</div>
                            <div class="text-sm text-gray-600 mb-2 whitespace-pre-wrap">${change.change_summary}</div>
                            <div class="flex flex-wrap gap-2">
                                ${tags.map(tag => `
                                    <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                                        ${tag}
                                    </span>
                                `).join('')}
                                ${impactAreas.map(area => `
                                    <span class="px-2 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">
                                        ${area}
                                    </span>
                                `).join('')}
                            </div>
                        </div>
                    `;
                }).join('') || '';

                return `
                    <tr class="group">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${commit.repository}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <a href="${REPO_GITHUB_URLS[commit.repository]}${commit.hash}" 
                               target="_blank" 
                               class="text-blue-600 hover:text-blue-800 hover:underline">
                                ${commit.hash}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${commit.author}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(commit.date).toLocaleDateString()}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <div class="font-medium mb-2">${commit.message}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <ul class="list-disc list-inside space-y-1">
                                ${commit.files.map(file => `
                                    <li class="hover:bg-gray-100 rounded p-1" style="white-space: normal; word-break: break-all;">
                                        ${file}
                                        <div class="mt-1 ml-4">
                                            <a href="${getFileUrl(commit.repository, commit.hash, file)}" 
                                               target="_blank"
                                               class="text-xs text-blue-600 hover:text-blue-800 hover:underline mr-2">
                                                View File
                                            </a>
                                            <a href="${getFileDiffUrl(commit.repository, commit.hash, file)}" 
                                               target="_blank"
                                               class="text-xs text-blue-600 hover:text-blue-800 hover:underline">
                                                View Changes
                                            </a>
                                        </div>
                                    </li>
                                `).join('')}
                            </ul>
                        </td>
                    </tr>
                `;
            }).join('');
            document.getElementById('commitDetails').innerHTML = commitDetailsHtml;

            // Populate file timeline
            console.log('Timeline data:', data.fileTimeline);
            // New commit timeline
            const commitTimelineHtml = data.commits.map(commit => {
                const impactBadge = `
                    <span class="px-2 py-1 text-xs font-medium rounded-full 
                        ${commit.impact === 'MAJOR' ? 'bg-red-100 text-red-800' : 
                          commit.impact === 'MODERATE' ? 'bg-yellow-100 text-yellow-800' : 
                          'bg-green-100 text-green-800'}">
                        ${commit.impact?.toLowerCase() || 'minor'}
                    </span>
                `;
                
                const fileChangesHtml = commit.file_changes?.map(change => {
                    try {
                        const tags = JSON.parse(change.tags || '[]');
                        const impactAreas = JSON.parse(change.impact_areas || '[]');
                        return `
                            <div class="mt-4 p-4 bg-gray-50 rounded-lg">
                                <div class="font-medium text-gray-700 mb-2">${change.file_path}</div>
                                <div class="text-sm text-gray-600 mb-2 whitespace-pre-wrap">${change.change_summary}</div>
                                <div class="flex flex-wrap gap-2">
                                    ${tags.map(tag => `
                                        <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                                            ${tag}
                                        </span>
                                    `).join('')}
                                    ${impactAreas.map(area => `
                                        <span class="px-2 py-1 text-xs font-medium bg-purple-100 text-purple-800 rounded-full">
                                            ${area}
                                        </span>
                                    `).join('')}
                                </div>
                            </div>
                        `;
                    } catch (e) {
                        console.error('Error parsing tags/impact_areas for file change:', e);
                        return '';
                    }
                }).join('') || '';

                return `
                    <tr class="group hover:bg-gray-50 cursor-pointer" data-commit-hash="${commit.hash}">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${commit.repository}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(commit.date).toLocaleDateString()}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <span class="font-medium">${commit.files.length}</span> files
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${impactBadge}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            <div class="font-medium">${commit.title}</div>
                            <div class="text-xs text-gray-400 mt-1">${commit.hash}</div>
                        </td>
                    </tr>
                    <tr class="hidden group" id="files-${commit.hash}">
                        <td colspan="5" class="px-6 py-4 bg-gray-50">
                            <div class="space-y-4">
                                <div class="bg-white rounded-lg p-4">
                                    <div class="text-sm text-gray-900 font-medium mb-2">Description</div>
                                    <div class="text-sm text-gray-700">${commit.description}</div>
                                </div>
                                <div class="space-y-4">
                                    <div class="text-sm text-gray-900 font-medium mb-2">Files Changed:</div>
                                    <div class="bg-white rounded-lg p-4">
                                        <ul class="list-disc list-inside space-y-2">
                                            ${commit.files.map(file => `
                                                <li class="hover:bg-gray-50 rounded p-1" style="white-space: normal; word-break: break-all;">
                                                    ${file}
                                                    <div class="mt-1 ml-4">
                                                        <a href="${getFileUrl(commit.repository, commit.hash, file)}" 
                                                           target="_blank"
                                                           class="text-xs text-blue-600 hover:text-blue-800 hover:underline mr-2">
                                                            View File
                                                        </a>
                                                        <a href="${getFileDiffUrl(commit.repository, commit.hash, file)}" 
                                                           target="_blank"
                                                           class="text-xs text-blue-600 hover:text-blue-800 hover:underline">
                                                            View Changes
                                                        </a>
                                                    </div>
                                                </li>
                                            `).join('')}
                                        </ul>
                                    </div>-center gap-2 text-sm">
                                                            <a href="${getFileUrl(commit.repository, commit.hash, change.file_path)}" 
                                                               target="_blank"
                                                               class="text-blue-600 hover:text-blue-800 hover:underline flex items-center gap-1">
                                                                View File
                                                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                                                </svg>
                                                            </a>
                                                            <span class="text-gray-300">|</span>
                                                            <a href="${getFileDiffUrl(commit.repository, commit.hash, change.file_path)}" 
                                                               target="_blank"
                                                               class="text-blue-600 hover:text-blue-800 hover:underline flex items-center gap-1">
                                                                View Changes
                                                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                                                                </svg>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                ${fileChange ? `
                                                    <div class="space-y-3">
                                                        <div class="text-gray-700">${fileChange.change_summary}</div>
                                                        <div class="flex flex-wrap gap-2">
                                                            ${tags.map(tag => `
                                                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                                                    ${tag}
                                                                </span>
                                                            `).join('')}
                                                        </div>
                                                        <div class="flex flex-wrap gap-2">
                                                            ${impactAreas.map(area => `
                                                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800">
                                                                    ${area}
                                                                </span>
                                                            `).join('')}
                                                        </div>
                                                    </div>
                                                ` : ''}
                                            </div>
                                        `;
                                    }).join('')}
                                </div>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
            document.getElementById('commitTimeline').innerHTML = commitTimelineHtml;

            // Add click handlers for expanding file lists
            document.querySelectorAll('[data-commit-hash]').forEach(row => {
                row.addEventListener('click', function() {
                    const hash = this.dataset.commitHash;
                    const filesRow = document.getElementById(`files-${hash}`);
                    if (filesRow) {
                        // Toggle active state on the clicked row
                        this.classList.toggle('bg-gray-50');
                        this.classList.toggle('bg-blue-50');
                        
                        // Toggle visibility of the files row
                        filesRow.classList.toggle('hidden');
                    }
                });
            });

            // Legacy file timeline
            const fileTimelineHtml = data.fileTimeline.map(file => {
                const timelineHtml = file.commits.map((commit, index) => {
                    const date = new Date(commit.date).toLocaleDateString();
                    return `
                        <div class="flex items-center">
                            ${index > 0 ? '<div class="h-6 w-0.5 bg-gray-300 mx-2"></div>' : ''}
                            <a href="${REPO_GITHUB_URLS[file.repository]}${commit.hash}" 
                               target="_blank" 
                               class="inline-flex items-center px-2.5 py-1.5 text-xs font-medium rounded-full
                                      ${index === 0 ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800'}
                                      hover:bg-opacity-80 transition-colors"
                               title="${commit.message}">
                                ${date}
                            </a>
                        </div>
                    `;
                }).join('');

                return `
                    <tr class="hover:bg-gray-50 cursor-pointer" onclick='showModal(${JSON.stringify({...file, files: [file.path]}).replace(/'/g, "&apos;")})'>                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${file.repository}</td>
                        <td class="px-6 py-4 text-sm text-gray-500" style="word-break: break-all;">${file.path}</td>
                        <td class="px-6 py-4">
                            <div class="flex items-center space-x-2">
                                ${timelineHtml}
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');
            document.getElementById('fileTimeline').innerHTML = fileTimelineHtml;
        }

        fetchData();
    </script>
</body>
</html>
